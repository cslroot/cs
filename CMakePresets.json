{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "ninja-vcpkg-base",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/build/install/${presetName}",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                }
            },
            "environment": {
                "VCPKG_ROOT": "${sourceDir}/third/vcpkg"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "clang-x64-ninja",
            "inherits": "ninja-vcpkg-base",
            "cacheVariables": {
                "CMAKE_C_COMPILER_FORCED": true,
                "CMAKE_CXX_COMPILER_FORCED": true,
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            },
            "condition": {
                "type": "inList",
                "string": "${hostSystemName}",
                "list": [
                    "Linux",
                    "Darwin"
                ]
            }
        },
        {
            "name": "gcc-x64-ninja",
            "inherits": "ninja-vcpkg-base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            },
            "condition": {
                "type": "inList",
                "string": "${hostSystemName}",
                "list": [
                    "Linux",
                    "Darwin"
                ]
            }
        },
        {
            "name": "windows-x64-ninja-vcpkg-base",
            "hidden": true,
            "inherits": "ninja-vcpkg-base",
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-clang-x64"
                }
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "windows-clang-x64-ninja",
            "description": "This preset is not work well. fail to build Poco with clang-cl #3162(lld-link: error: could not open 'PocoFoundationd.lib': no such file or directory)",
            "inherits": "windows-x64-ninja-vcpkg-base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "windows-cl-x64-ninja",
            "inherits": "windows-x64-ninja-vcpkg-base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "MSVC": true
            }
        },
        {
            "name": "windows-x64-vs2022",
            "inherits": "windows-cl-x64-ninja",
            "generator": "Visual Studio 17 2022"
        },
        {
            "name": "windows-x64-vs2019",
            "inherits": "windows-cl-x64-ninja",
            "generator": "Visual Studio 16 2019"
        },
        {
            "name": "raspi-arm64-clang",
            "displayName": "Clang(aarch64)",
            "description": "Using compilers: C = /usr/bin/clang, CXX = /usr/bin/clang++",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install/${presetName}",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            },
            "environment": {
                "VCPKG_FORCE_SYSTEM_BINARIES": "1"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "test",
            "hidden": true,
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "clang-x64-ninja-Debug",
            "configurePreset": "clang-x64-ninja",
            "configuration": "Debug"
        },
        {
            "name": "clang-x64-ninja-Release",
            "configurePreset": "clang-x64-ninja",
            "configuration": "Release"
        },
        {
            "name": "windows-x64-Debug",
            "configurePreset": "windows-cl-x64-ninja",
            "configuration": "Debug"
        },
        {
            "name": "windows-x64-Release",
            "configurePreset": "windows-cl-x64-ninja",
            "configuration": "Release"
        },
        {
            "name": "raspi-arm64",
            "description": "",
            "displayName": "raspi(aarch64)",
            "configurePreset": "raspi-arm64-clang"
        },
        {
            "name": "windows-gen-sln-vs2022",
            "configurePreset": "windows-x64-vs2022",
            "configuration": "Debug",
            "targets": [
                "ALL_BUILD"
            ]
        },
        {
            "name": "windows-clang-Debug",
            "configurePreset": "windows-clang-x64-ninja",
            "configuration": "Debug"
        }
    ],
    "testPresets": [
        {
            "name": "windows-x64-vs2022",
            "output": {
                "outputOnFailure": true
            },
            "configurePreset": "windows-cl-x64-ninja",
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "linux-Debug",
            "configurePreset": "clang-x64-ninja"
        }
    ]
}