{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/build/install/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                }
            },
            "environment": {
                "VCPKG_ROOT": "${sourceDir}/third/vcpkg"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Windows"
                    ]
                }
            }
        },
        {
            "name": "windows-x64-ninja",
            "inherits": "windows-base",
            "generator": "Ninja Multi-Config"
        },
        {
            "name": "windows-x64-vs2022",
            "inherits": "windows-base",
            "generator": "Visual Studio 17 2022",
            "toolset": "host=x64",
            "cacheVariables": {
                "MSVC": true
            }
        },
        {
            "name": "windows-x64-vs2019",
            "inherits": "windows-base",
            "generator": "Visual Studio 16 2019",
            "toolset": "host=x64",
            "cacheVariables": {
                "MSVC": true
            }
        },
        {
            "name": "ninja",
            "hidden": true,
            "generator": "Ninja",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install/${presetName}",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                }
            },
            "environment": {
                "VCPKG_ROOT": "${sourceDir}/third/vcpkg"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "clang-debug",
            "displayName": "Clang(Debug)",
            "inherits": "ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "clang-release",
            "displayName": "Clang(Release)",
            "inherits": "ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "gcc9-debug",
            "inherits": "ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "raspi-arm64-clang",
            "displayName": "Clang(aarch64)",
            "description": "Using compilers: C = /usr/bin/clang, CXX = /usr/bin/clang++",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install/${presetName}",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            },
            "environment": {
                "VCPKG_FORCE_SYSTEM_BINARIES": "1"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-x64-ninja-debug",
            "configurePreset": "windows-x64-ninja",
            "configuration": "Debug"
        },
        {
            "name": "windows-x64-ninja-release",
            "configurePreset": "windows-x64-ninja",
            "configuration": "Release"
        },
        {
            "name": "windows-x64-vs2022-debug",
            "configurePreset": "windows-x64-vs2022",
            "configuration": "Debug"
        },
        {
            "name": "windows-x64-vs2022-release",
            "configurePreset": "windows-x64-vs2022",
            "configuration": "Release"
        },
        {
            "name": "windows-x64-vs2019-debug",
            "configurePreset": "windows-x64-vs2019",
            "configuration": "Debug"
        },
        {
            "name": "windows-x64-vs2019-release",
            "configurePreset": "windows-x64-vs2019",
            "configuration": "Release"
        },
        {
            "name": "ubuntu-gcc9-debug",
            "description": "",
            "displayName": "",
            "configurePreset": "gcc9-debug"
        },
        {
            "name": "raspi-arm64",
            "description": "",
            "displayName": "raspi(aarch64)",
            "configurePreset": "raspi-arm64-clang"
        }
    ],
    "testPresets": [
        {
            "name": "win-x64-vs2022",
            "output": {
                "outputOnFailure": true
            },
            "configurePreset": "windows-x64-vs2022",
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "ubuntu-gcc9-debug",
            "configurePreset": "gcc9-debug"
        }
    ]
}